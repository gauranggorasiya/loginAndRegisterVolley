<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/idBtjsonobject"
        android:text="@string/show_json_object_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/idBtjsonarray"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/idBtjsonobject"
        android:text="@string/show_json_array_response" />

    <LinearLayout
        android:id="@+id/idLlresponse"
        android:layout_below="@+id/idBtjsonarray"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:id="@+id/idTvname"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/idTvemail"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/idTvcall"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/idTvhome"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
    </LinearLayout>

<!--    <TextView
        android:id="@+id/idTvResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBtjsonarray"
        android:text="Hello World!" />-->

</RelativeLayout>